{
  "name": "memocue-lite",
  "version": "1.0.0",
  "description": "轻量级定时提醒服务",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node --max-old-space-size=128 src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./public/styles.css -o ./public/styles.min.css --minify",
    "build:js": "esbuild public/js/*.js --bundle --minify --outdir=public/dist",
    "data:init": "node scripts/init-data.js",
    "data:backup": "node scripts/backup.js",
    "check": "npm run check:size && npm run check:lines",
    "check:size": "find src -name '*.js' -exec wc -l {} + | awk '{if($1>300) print $2 \" has \" $1 \" lines (max: 300)\"}'",
    "check:lines": "echo 'Checking file line counts...'"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "cron-parser": "^5.3.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "proper-lockfile": "^4.1.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "write-file-atomic": "^5.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.8",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
